<%= provide(:title, "Tambah Supir") %>
<div class="container">   
	<% if !@supir.errors.empty? %>   
	   <div>   
	         
	      <ul>   
	         <% @supir.errors.full_messages.each do |msg| %>   
	            <li><%= msg %></li>   
	         <% end %>      </ul>   
	         
	   </div>   
	<% end %>
	  
	<div class="card p-4 m-4">   
	   <%= form_for @supir, html: { multipart: true } do |f| %> 
		   	<div class="form-group">  
		      <label>First Name</label> 
		      <%= f.text_field :first_name, :class => "form-control" %>
			</div>
			<div class="form-group">  
		      <label>Last Name</label> 
		      <%= f.text_field :last_name, :class => "form-control" %>
			</div>		    
		    <div class="form-group">
		      <label>Nick Name</label> 
		      <%= f.text_field :nick_name, :class => "form-control" %>   
		    </div>
		    <div class="form-group">
		      <label>Telepon</label> 
		      <%= f.text_field :telepon, :class => "form-control" %>   
		    </div>
		    <div class="form-group"> 	       
		      <label>Alamat</label> 
		      <%= f.text_area :alamat, :class => "form-control" %>   
		    </div>
			<div class="form-group"> 	       
		      <label>Birth Date</label> 
		      <%= f.text_field :birth_date, :class => "form-control" %>   
		    </div>		      	       
		      <%= f.submit "Save", :class => "btn btn-primary" %>   
	   		</div>
	   <% end %>   
	</div>   
</div>  