<%= provide(:title, "Tambah Bus") %>
<div class="container">   
	<% if !@bus.errors.empty? %>   
	   <div>   
	         
	      <ul>   
	         <% @bus.errors.full_messages.each do |msg| %>   
	            <li><%= msg %></li>   
	         <% end %>      </ul>   
	         
	   </div>   
	<% end %>
	  
	<div class="card p-4 m-4">   
	   <%= form_for @bus, html: { multipart: true } do |f| %> 
		   	<div class="form-group">  
		      <label>Nomer Bus</label> 
		      <%= f.text_field :no_bus, :class => "form-control" %>
			</div>
		    <div class="form-group">
		      <label>Gambar Bus</label>   
		      <%= f.file_field :img_bus, :class => "form-control-file border" %>   
		    </div>
		    <div class="form-group">
		      <label>Jenis Bus</label> 
		      <%= f.text_field :id_jenis, :class => "form-control" %>   
		    </div>
		    <div class="form-group">
		      <label>Bangku Bus</label> 
		      <%= f.text_field :id_bangku, :class => "form-control" %>   
		    </div>
		    <div class="form-group"> 	       
		      <label>Fasilitas Bus</label> 
		      <%= f.text_field :fasilitas, :class => "form-control" %>   
		    </div>  	       
		      <%= f.submit "Save", :class => "btn btn-primary" %>   
	   		</div>
	   <% end %>   
	</div>   
</div>  