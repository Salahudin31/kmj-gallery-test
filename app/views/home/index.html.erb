			            <p class="card-text">
							Jenis:
							<%= bus.id_jenis %>
						</p>	
						<p class="card-text">
							Bangku:
							<%= bus.id_bangku %>
						</p>	
						<p class="card-text">
							Fasilitas:
							<%= bus.fasilitas %>
						</p>
						<%= link_to 'Detail', bus_path(bus) %>
