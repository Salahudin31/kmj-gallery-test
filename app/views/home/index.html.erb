<div class="container">
	<h4>Daftar Bus<%= link_to "New bus", new_bus_path, :class => "float-right" %></h4>
	<div class="row no-gutters mt-4 mb-4">
		<% @buses.each do |bus| %> 
			<div class="col-4 p-2">
				<div class="card">
					<div class="card-body text-center">
			            <h4 class="card-title">
						  Nomer Bus:
						  <%= bus.no_bus %>
